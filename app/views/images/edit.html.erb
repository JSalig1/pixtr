<%= link_to "<<back", gallery_path(@image.gallery_id) %>

<h1><%= @image.name %></h1>

<img src="<%= @image.url %>">

<p><%= @image.description %></p>

<%= form_for([@image]) do |form| %>
  <%= render "form_errors", target: @image %>
  <%= form.text_field :name, placeholder: "Name" %>
  <%= form.text_area :description, placeholder: "Description" %>
  <%= form.text_field :url, placeholder: "URL" %>
  <%= form.text_field :tag_list, placeholder: "Tags (separated by commas)" %>
  <div>
    <%= form.collection_check_boxes :group_ids, @groups, :id, :name %>
  </div>
  <%= form.submit "Update Image" %>
<% end %>
